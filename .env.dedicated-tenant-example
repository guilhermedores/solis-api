# ==============================================================================
# EXEMPLO: Configuração de Tenant com Banco Dedicado
# ==============================================================================
# 
# Este é um exemplo de como configurar um tenant "enterprise" com banco dedicado
# 
# PASSO 1: Criar banco dedicado no Docker
# docker run -d \
#   --name solis-enterprise \
#   --network solis-pdv-network \
#   -e POSTGRES_DB=enterprise_db \
#   -e POSTGRES_USER=enterprise_user \
#   -e POSTGRES_PASSWORD=enterprise_pass \
#   -p 5433:5432 \
#   postgres:15-alpine
#
# PASSO 2: Adicionar esta configuração ao .env.local
# DB_ENTERPRISE_URL=postgresql://enterprise_user:enterprise_pass@solis-enterprise:5432/enterprise_db
#
# OU (configuração individual):
# DB_ENTERPRISE_HOST=solis-enterprise
# DB_ENTERPRISE_PORT=5432
# DB_ENTERPRISE_NAME=enterprise_db
# DB_ENTERPRISE_USER=enterprise_user
# DB_ENTERPRISE_PASSWORD=enterprise_pass
#
# PASSO 3: Aplicar migrations no banco dedicado
# docker exec -i solis-enterprise psql -U enterprise_user -d enterprise_db < migrations/init.sql
#
# PASSO 4: Cadastrar tenant na tabela global
# INSERT INTO tenants (subdomain, company_name, plan, max_terminals, active)
# VALUES ('enterprise', 'Enterprise Corp', 'enterprise', 999, true);
#
# PASSO 5: Testar
# curl "http://localhost:3000/api/health?tenant=enterprise"
#
# ==============================================================================

# Exemplo de tenant "megacorp" com banco dedicado
# DB_MEGACORP_URL=postgresql://megacorp_user:megacorp_pass@db-megacorp.example.com:5432/megacorp_db

# Exemplo de tenant "bigretail" com banco dedicado em servidor AWS RDS
# DB_BIGRETAIL_URL=postgresql://admin:senha@bigretail-db.abc123.us-east-1.rds.amazonaws.com:5432/bigretail

# Exemplo de tenant "globalcorp" com banco dedicado no Azure
# DB_GLOBALCORP_URL=postgresql://globaladmin@globalcorp-db:senha@globalcorp-db.postgres.database.azure.com:5432/globalcorp?sslmode=require
